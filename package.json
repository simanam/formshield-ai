{
  "name": "formshield-ai",
  "version": "1.1.0",
  "description": "Open-source TypeScript spam filter using rules-first scoring and optional multi-model AI",
  "keywords": [
    "spam-filter",
    "form-protection",
    "ai",
    "anti-spam",
    "multi-model",
    "openai",
    "anthropic",
    "edge-runtime"
  ],
  "author": "FormShield Contributors",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "src",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --clean",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "tsc --noEmit",
    "prepublishOnly": "npm run build && npm test"
  },
  "peerDependencies": {
    "@anthropic-ai/sdk": "^0.20.0",
    "openai": "^4.0.0"
  },
  "peerDependenciesMeta": {
    "openai": {
      "optional": true
    },
    "@anthropic-ai/sdk": {
      "optional": true
    }
  },
  "devDependencies": {
    "@anthropic-ai/sdk": "^0.20.0",
    "@types/node": "^20.11.0",
    "openai": "^4.104.0",
    "tsup": "^8.0.1",
    "tsx": "^4.20.6",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/simanam/formshield-ai"
  },
  "bugs": {
    "url": "https://github.com/simanam/formshield-ai/issues"
  },
  "homepage": "https://github.com/simanam/formshield-ai#readme"
}
